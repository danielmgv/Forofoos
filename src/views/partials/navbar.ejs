



<%
  // Función simple para determinar si la ruta actual coincide con el enlace
  const isActive = (route) => locals.path && locals.path.startsWith(route);
  const baseClass = "flex items-center gap-3 p-3 rounded-lg transition";
  const activeClass = "bg-indigo-600 text-white";
  const inactiveClass = "hover:bg-[#2a3344]";
%>

<nav class="space-y-4 flex-1">
    <a href="/home" class="<%= baseClass %> <%= isActive('/home') ? activeClass : inactiveClass %>">
        <i class="fas fa-home"></i> Home
    </a>
    <a href="/proyectos" class="<%= baseClass %> <%= isActive('/proyectos') ? activeClass : inactiveClass %>">
        <i class="fas fa-briefcase"></i> Proyectos
    </a>
    <a href="#" class="<%= baseClass %> <%= isActive('/community') ? activeClass : inactiveClass %>">
        <i class="fas fa-users"></i> Community
    </a>
    <a href="#" class="<%= baseClass %> <%= isActive('/analytics') ? activeClass : inactiveClass %>">
        <i class="fas fa-chart-line"></i> Analytics
    </a>
    <a href="/mensajes" class="<%= baseClass %> <%= isActive('/mensajes') ? activeClass : inactiveClass %>">
        <i class="fas fa-envelope"></i> Mensajes
    </a>
    <a href="/configuracion" class="<%= baseClass %> <%= isActive('/configuracion') ? activeClass : inactiveClass %>">
        <i class="fas fa-cog"></i> Configuración
    </a>
</nav>

<div class="mt-auto">
    <a href="/logout" class="text-gray-400 hover:text-red-400 text-sm"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
</div>