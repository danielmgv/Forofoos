<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head', { title: 'Comunidad' }) %>
    <link rel="stylesheet" href="/css/proyectos.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Comunidad</h1>
        </div>

        <div class="mb-4">
            <form action="/community" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Buscar por nombre de usuario..." value="<%= search %>">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>

        <% if (users.length > 0) { %>
            <div class="row">
                <% users.forEach(user => { %>
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= user.username %></h5>
                                <p class="card-text text-muted small">Miembro desde: <%= new Date(user.createdAt).toLocaleDateString() %></p>
                                <div class="mt-auto pt-3">
                                    <a href="/proyectos?suggest_user=<%= user.id %>&suggest_name=<%= encodeURIComponent(user.username) %>" class="btn btn-outline-primary w-100">
                                        Sugerir Colaboración
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No se encontraron usuarios con ese criterio de búsqueda.
            </div>
        <% } %>

        <% if (totalPages > 1) { %>
            <%- include('partials/pagination', { currentPage, totalPages, search, sort: '' , baseUrl: '/community' }) %>
        <% } %>

    </main>

    <%- include('partials/footer') %>
</body>
</html>