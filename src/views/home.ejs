<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - ForoFoos</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-[#121826] text-gray-200 font-sans">

  <div class="flex h-screen overflow-hidden">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-[#1e2532] p-6 hidden md:flex flex-col">
        <div class="flex items-center gap-3 mb-10">
            <img src="/user-avatar.jpg" class="w-10 h-10 rounded-full border-2 border-indigo-500" alt="Profile">
            <div>
                <p class="text-sm font-bold"><%= user.name %></p>
                <p class="text-xs text-gray-400">Admin</p>
            </div>
        </div>

        <%- include('partials/navbar') %>

        <div class="mt-auto">
            <a href="/logout" class="text-gray-400 hover:text-red-400 text-sm"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col h-screen overflow-hidden bg-[#121826]">
      <div class="flex-1 overflow-y-auto p-6">
        <h1 class="text-2xl font-bold mb-2">Home</h1>
        <h2 class="text-gray-400 text-sm mb-8">Bienvenido de vuelta, <%= user.name %></h2>

        <% if (locals.error) { %>
            <div class="bg-red-900/30 border border-red-500/50 text-red-200 p-4 rounded-lg mb-6">
                <%= error %>
            </div>
        <% } %>
        <% if (locals.success) { %>
            <div class="bg-green-900/30 border border-green-500/50 text-green-200 p-4 rounded-lg mb-6">
                <%= success %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Resumen General -->
          <div class="bg-[#1e2532] p-6 rounded-xl border border-gray-700">
            <h3 class="text-lg font-bold mb-4 border-b border-gray-700 pb-2">Resumen General</h3>
            <div class="mb-6">
              <p class="text-sm text-gray-400">Total de Proyectos</p>
              <p class="text-4xl font-bold text-white"><%= totalProjects %></p>
            </div>
            
            <% if (lastProject) { %>
              <div class="mb-6">
                <p class="text-sm text-gray-400">Última Actualización</p>
                <p class="font-semibold"><%= lastProject.nombre %></p>
                <p class="text-xs text-gray-500"><%= new Date(lastProject.updated_at).toLocaleDateString('es-ES') %></p>
              </div>
            <% } %>
            
            <a href="/proyectos" class="inline-block w-full text-center bg-[#2a3344] hover:bg-[#353f54] text-indigo-400 py-2 rounded-lg transition border border-gray-700">Gestionar Proyectos</a>
          </div>

          <!-- Estadísticas -->
          <div class="bg-[#1e2532] p-6 rounded-xl border border-gray-700">
            <h3 class="text-lg font-bold mb-4 border-b border-gray-700 pb-2">Estadísticas de Estado</h3>
            <div class="relative h-64 w-full flex justify-center">
              <canvas id="projectsChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Actividad Reciente -->
        <div class="mt-6 bg-[#1e2532] p-6 rounded-xl border border-gray-700">
            <div class="flex justify-between items-center mb-4 border-b border-gray-700 pb-2">
                <h3 class="text-lg font-bold">Actividad Reciente</h3>
                <a href="/proyectos" class="text-xs text-indigo-400 hover:text-indigo-300">Ver todos</a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-400">
                    <thead class="text-xs uppercase bg-[#2a3344] text-gray-300">
                        <tr>
                            <th class="px-4 py-3 rounded-l-lg">Proyecto</th>
                            <th class="px-4 py-3">Estado</th>
                            <th class="px-4 py-3">Actualizado</th>
                            <th class="px-4 py-3 rounded-r-lg text-right">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!locals.recentProjects || recentProjects.length === 0) { %>
                            <tr>
                                <td colspan="4" class="px-4 py-4 text-center">No hay actividad reciente.</td>
                            </tr>
                        <% } else { %>
                            <% recentProjects.forEach(project => { %>
                                <tr class="border-b border-gray-700 hover:bg-[#2a3344] transition last:border-0">
                                    <td class="px-4 py-3 font-medium text-white"><%= project.nombre %></td>
                                    <td class="px-4 py-3">
                                        <span class="px-2 py-1 rounded-full text-xs <%= project.estado === 'Completado' ? 'bg-green-900/50 text-green-300 border border-green-500/30' : project.estado === 'En progreso' ? 'bg-blue-900/50 text-blue-300 border border-blue-500/30' : 'bg-gray-700 text-gray-300' %>"><%= project.estado %></span>
                                    </td>
                                    <td class="px-4 py-3"><%= new Date(project.updated_at).toLocaleDateString() %></td>
                                    <td class="px-4 py-3 text-right">
                                        <div class="flex justify-end gap-3">
                                            <a href="/proyectos/editar/<%= project.id %>" class="text-indigo-400 hover:text-indigo-300 transition" title="Editar"><i class="fas fa-edit"></i></a>
                                            <% if (project.estado !== 'Completado') { %>
                                                <form action="/proyectos/completar/<%= project.id %>?redirect=/home" method="POST" class="inline">
                                                    <button type="submit" class="text-green-400 hover:text-green-300 transition" title="Marcar como completado">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const ctx = document.getElementById('projectsChart').getContext('2d');
      const chartData = <%- JSON.stringify(chartData) %>; // Inyectar datos desde el servidor

      if (chartData.labels.length > 0) {
        new Chart(ctx, {
          type: 'doughnut', // o 'pie', 'bar'
          data: {
            labels: chartData.labels,
            datasets: [{
              label: 'Proyectos por Estado',
              data: chartData.data,
              backgroundColor: [
                'rgba(255, 159, 64, 0.7)', // En progreso
                'rgba(75, 192, 192, 0.7)',  // Completado
                'rgba(255, 205, 86, 0.7)',  // En espera
                'rgba(239, 68, 68, 0.7)',   // Cancelado (Red-500)
                'rgba(99, 102, 241, 0.7)'    // Otro estado (Indigo-500)
              ],
              borderWidth: 0,
              hoverOffset: 4
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { 
                position: 'bottom',
                labels: { color: '#9ca3af' } // text-gray-400
              }
            }
          }
        });
      } else {
        // Fallback si no hay datos
      }
    });
  </script>

</body>
</html>